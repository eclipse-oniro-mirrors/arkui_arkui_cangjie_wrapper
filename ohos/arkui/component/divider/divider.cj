package ohos.arkui.component

foreign {
    func FfiOHOSAceFrameworkDividerCreate(): Unit

    func FfiOHOSAceFrameworkDividerSetVertical(isVertical: Bool): Unit

    func FfiOHOSAceFrameworkDividerSetLineCap(style: Int32): Unit

    func FfiOHOSAceFrameworkDividerSetDividerColor(color: UInt32): Unit

    func FfiOHOSAceFrameworkDividerSetStrokeWidth(width: Float64, unit: Int32): Unit
}

@!APILevel[
    12,
    stagemodelonly: true,
    syscap: "SystemCapability.ArkUI.ArkUI.Full"
]
public class Divider <: ViewBase {
    @!APILevel[
        12,
        stagemodelonly: true,
        syscap: "SystemCapability.ArkUI.ArkUI.Full"
    ]
    public init() {
        unsafe {
            FfiOHOSAceFrameworkDividerCreate()
        }
    }

    @!APILevel[
        12,
        stagemodelonly: true,
        syscap: "SystemCapability.ArkUI.ArkUI.Full"
    ]
    public func vertical(isVertical: Bool): This {
        unsafe {
            FfiOHOSAceFrameworkDividerSetVertical(isVertical)
        }
        this
    }

    @!APILevel[
        12,
        stagemodelonly: true,
        syscap: "SystemCapability.ArkUI.ArkUI.Full"
    ]
    public func color(color: ResourceColor): This {
        unsafe {
            FfiOHOSAceFrameworkDividerSetDividerColor(transAppResourceToResourceColor(color))
        }
        this
    }

    @!APILevel[
        12,
        stagemodelonly: true,
        syscap: "SystemCapability.ArkUI.ArkUI.Full"
    ]
    public func strokeWidth(width: Length): This {
        var width_ = transAppResourceToLength(width)
        unsafe {
            FfiOHOSAceFrameworkDividerSetStrokeWidth(width_.value, width_.unitType.getValue())
        }
        this
    }

    @!APILevel[
        12,
        stagemodelonly: true,
        syscap: "SystemCapability.ArkUI.ArkUI.Full"
    ]
    public func lineCap(style: LineCapStyle): This {
        unsafe {
            FfiOHOSAceFrameworkDividerSetLineCap(style.getValue())
        }
        this
    }

    @!APILevel[
        12,
        stagemodelonly: true,
        syscap: "SystemCapability.ArkUI.ArkUI.Full"
    ]
    protected func pop(): Unit {
        this
    }
}
